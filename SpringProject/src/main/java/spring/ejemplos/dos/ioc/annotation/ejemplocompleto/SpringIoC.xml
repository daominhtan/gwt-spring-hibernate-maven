<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	   xmlns:aop="http://www.springframework.org/schema/aop"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   					   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	   					   http://www.springframework.org/schema/context
	   					   http://www.springframework.org/schema/context/spring-context-2.5.xsd">
           
    <!-- NO HACE FALTA SI DEFINIMOS LOS BEANS EN EL XML -->       
	<!-- context:component-scan base-package="spring.ejemplos.dos.ioc.annotation.ejemplocompleto" /-->
	
	<context:annotation-config/>
	
	<bean id="coche" class="spring.ejemplos.dos.ioc.annotation.ejemplocompleto.Coche">
		<property name="motor" ref="motor"/>
	</bean>
	
	<bean id="motor" class="spring.ejemplos.dos.ioc.annotation.ejemplocompleto.Motor"></bean>
	
	<bean id="rueda" class="spring.ejemplos.dos.ioc.annotation.ejemplocompleto.Rueda"></bean>
	
	<bean id="chasis" class="spring.ejemplos.dos.ioc.annotation.ejemplocompleto.Chasis"></bean>

</beans>