<?xml version="1.0" encoding="UTF-8"?>
<web-app>

	<!-- Configurar el listener de Spring para que levante el factory -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/applicationContext.xml</param-value>
	</context-param>

	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>

	<!-- Configurar el servlet de Apache CXF que se encargar치 de exponer el 
		servicio web. 
 		El servlet CXFServlet de Apache CXF se encarga de recibir todas las peticiones a la aplicaci칩n web. 
 		Cuando accedamos a la raiz de nuestra aplicaci칩n web veremos un listado con todos los 
 		servicios web del m칩dulo-->
	<servlet>
		<servlet-name>CXFServlet</servlet-name>
		<servlet-class>
			org.apache.cxf.transport.servlet.CXFServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>CXFServlet</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>

	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
</web-app>
